 <div class="row form">
  <h2 class="text-center mb-3">Log in</h2>
  <div class = "col-6 mx-auto">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group d-flex ">
      <%= f.label :email, class: "col-sm-2 col-form-label text-start mx-4" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",   class:"form-control" %>
    </div>

    <div class="field form-group d-flex my-3">
      <%= f.label :password,class: "col-sm-2 col-form-label text-start mx-4" %><br />
      <%= f.password_field :password, autocomplete: "current-password",   class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group d-flex align-items-center">
        <div class= "col-sm-2  mx-4"></div>
        <%= f.check_box :remember_me, class: "mr-1" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions  form-group d-flex" >
      <div class= "col-sm-2  mx-4"></div>
      <%= f.submit "Log in", class: "btn btn-primary my-3" %>
    </div>

  <% end %>

  <div class="actions form-group d-flex" >
    <div class= "col-sm-2  mx-4 "></div>
  </div>

   <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />

  </div>
</div>
 

