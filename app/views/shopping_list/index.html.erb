
 
  <div class='col-sm-7 pb-2 mx-auto'>
    <h1 class="text-center" >Shopping list</h1> 
  </div>


  <div class='col-sm-7 pb-2 mx-auto d-flex justify-content-between'>
    <p>Amount of food items: <%= @ingredients.count %> </p>
    <p>Total value of food needed: <%= totalPrice %>$
     </p>
  </div>

 <div class="col-sm-7 border m-auto p-4 mb-5 "> 
  <div class="row bg-secondary text-white p-1">
    <div class="col-4" >Food</div>
    <div class="col-4">Quantity </div>
    <div class="col-4">Price </div>

  </div>

  <% @ingredients.each do |recipe_food| %>
  <% food = Food.find(recipe_food.food_id) %>
  <div class="row">
  <div class="row border-bottom border-2 m-2 p-2 ">
    <div class="col-4"> <%= Food.find(recipe_food.food_id).name %> </div>
    <div class="col-4"> <%= recipe_food.quantity %> <%= food.measurement_unit %></div>
    <div class="col-4"><%= Food.find(recipe_food.food_id).price * recipe_food.quantity%> $</div>
  </div>
   </div>
  <% end %>
  </div>
 