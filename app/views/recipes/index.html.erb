<h1 class='text-center mb-3'> Your recipes</h1>

  <% current_user.recipes.each do |recipe| %>
  <div class="col-sm-7 border border-2 m-auto p-4 my-3 row"> 
    <div class="col-4  border-end border-2"> 
      <h3 class="my-3 pb-2"> <%= recipe.name %> </h3>
      <%= button_to "Delete", user_recipe_path(current_user.id, recipe), method: :delete, 
                                              data: {confirm: 'Are you sure that you want to delete this article?'}, class: "btn btn-primary" %>
    <div class = "py-2">
      <%= link_to 'See this recipe', user_recipe_path( recipe.user.id, recipe.id  )%>
    </div>

    </div>

    <div class="col d-flex align-items-center px-4">
      <p><%= recipe.description %></p>
    </div>
  
 </div>
  <% end %>


