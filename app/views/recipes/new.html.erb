<h1 class='text-center mb-3'> Create a new recipe</h1>
<div class="mb-5">  
  <%= form_with(model: @recipe, url: user_recipes_path(current_user.id)) do |f| %>
  <div class="row form ml-4">
    <div class= "form-group d-flex mb-4" >
      <%= f.label :name, class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-7" >
      <%= f.text_field :name,   class:"form-control", placeholder: "Recipe name", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex" >
      <%= f.label :description, class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-7" >
      <%= f.text_area :description, rows: 4,   class:"form-control", placeholder: "Description of the recipe", autofocus: true %>
      </div>
    </div>


    <div class= "form-group d-flex my-4" >
      <%= f.label "Preparation time (min):", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-2" >
      <%= f.number_field :preparation_time,   class:"form-control", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex" >
      <%= f.label "Cooking time (min):", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-2" >
      <%= f.number_field :cooking_time,   class:"form-control", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex mt-4" >
      <%= f.label "Public:", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class= "d-flex align-items-center">
      <%= f.check_box :public, class:"form-check-input form-control", autofocus: true %>
      </div>
    </div>
    
    <div class= "form-group d-flex" >
      <div class= "col-sm-2  mx-4"></div>
      <%= f.submit class: "btn btn-lg btn-warning submit-btn mt-4" %>
    </div>
  </div>
  <% end %>
</div> 

 