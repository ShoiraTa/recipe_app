<h1 class="text-center">Public recipes</h1>
  <% @public_recipes.each do |recipe| %>
  <div class="col-sm-8 border border-2 m-auto p-4 my-3 row"> 
    <div class="col-4  border-end border-2"> 



      <h5 class="my-3 pb-2 text-decoration-none"><%= link_to recipe.name, user_recipe_path( recipe.user.id, recipe.id  ) %> </h5>
      <p> By: <%= recipe.user.email %> </p>
      
    
    
    </div>

    <div class="col d-flex align-items-center flex-column justify-content-center px-4">

      <p>Total food items: <%=  @public_recipe.food_arr(recipe.id).count %></p>

      <p>Total price: 
        <%=  @public_recipe.total_food_price(@public_recipe.food_arr(recipe.id), recipe.id ) %>$
      </p>

    </div>  
 </div>
  <% end %>